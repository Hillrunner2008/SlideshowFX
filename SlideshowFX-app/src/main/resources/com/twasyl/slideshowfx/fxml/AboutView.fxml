<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Background?>
<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.twasyl.slideshowfx.controllers.AboutViewController"
           alignment="CENTER" prefWidth="${backgroundImage.fitWidth}" prefHeight="${backgroundImage.fitHeight}"
           onMouseClicked="#exitByClick">

    <background><Background fx:constant="EMPTY" /></background>

    <ImageView>
        <image>
            <Image fx:id="backgroundImage" url="@/com/twasyl/slideshowfx/images/about.png" />
        </image>
    </ImageView>

    <VBox spacing="10" translateX="25" translateY="150">
        <Label fx:id="slideshowFXVersion" style="-fx-text-fill: white;" />
        <Label fx:id="javaVersion" style="-fx-text-fill: white;" />
    </VBox>

</StackPane>

